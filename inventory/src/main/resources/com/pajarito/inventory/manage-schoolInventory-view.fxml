<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pajarito.inventory.ManageSchoolInventoryController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="18.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="20" left="30" right="30" bottom="20"/>
            </padding>
            <!-- Header -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #000; -fx-background-radius: 10; -fx-padding: 10;">
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/school.png" />
                    </image>
                </ImageView>
                <Label text="MANAGE SCHOOL INVENTORY" textFill="white"
                       style="-fx-font-size: 18px; -fx-font-family: 'Franklin Gothic Heavy'; -fx-font-weight: bold;"
                       HBox.hgrow="ALWAYS" alignment="CENTER"/>
            </HBox>
            <!-- Main Content: Info Form and ListView side by side -->
            <HBox alignment="CENTER" spacing="24.0">
                <!-- Info Form -->
                <VBox alignment="CENTER" spacing="12.0" prefWidth="320.0"
                      style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="90"/>
                            <ColumnConstraints halignment="LEFT" minWidth="160"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                            <RowConstraints minHeight="30"/>
                        </rowConstraints>
                        <Label text="Id" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtId" editable="false" prefWidth="160.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtName" editable="false" prefWidth="160.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Description" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDescription" editable="false" prefWidth="160.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Serial Number" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSerialNumber" editable="false" prefWidth="160.0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Equipment" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <StackPane prefWidth="160.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <children>
                                <ComboBox fx:id="cmbEquipment" prefWidth="160.0" />
                                <TextField fx:id="txtEquipmentName" editable="false" prefWidth="160.0" />
                            </children>
                        </StackPane>
                        <Label text="Manufacturer" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <StackPane prefWidth="160.0" GridPane.rowIndex="5" GridPane.columnIndex="1">
                            <children>
                                <ComboBox fx:id="cmbManufacturer" prefWidth="160.0" />
                                <TextField fx:id="txtManufacturerName" editable="false" prefWidth="160.0" />
                            </children>
                        </StackPane>
                        <Label text="Category" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <StackPane prefWidth="160.0" GridPane.rowIndex="6" GridPane.columnIndex="1">
                            <children>
                                <ComboBox fx:id="cmbCategory" prefWidth="160.0" />
                                <TextField fx:id="txtCategoryName" editable="false" prefWidth="160.0" />
                            </children>
                        </StackPane>
                        <Label text="Condition" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <StackPane prefWidth="160.0" GridPane.rowIndex="7" GridPane.columnIndex="1">
                            <children>
                                <ComboBox fx:id="cmbCondition" prefWidth="160.0" />
                                <TextField fx:id="txtConditionName" editable="false" prefWidth="160.0" />
                            </children>
                        </StackPane>
                        <Label text="Quantity" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtQuantityAvailable" editable="false" prefWidth="160.0" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                    </GridPane>
                    <HBox alignment="CENTER" spacing="18.0" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#onCreate" style="-fx-background-color: #000; -fx-background-radius: 5;" text="Create" textFill="WHITE" />
                        <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onEdit" style="-fx-background-color: #000; -fx-background-radius: 5;" text="Edit" textFill="WHITE" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onDelete" style="-fx-background-color: #000; -fx-background-radius: 5;" text="Delete" textFill="WHITE" />
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onClose" style="-fx-background-color: #fff; -fx-border-color: #000; -fx-background-radius: 5; -fx-border-radius: 5;" text="Close" />
                    </HBox>
                </VBox>
                <!-- ListView Section -->
                <VBox alignment="CENTER" spacing="8.0" prefWidth="320.0"
                      style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="School Inventories" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <ListView fx:id="lvSchoolInventories" onMouseClicked="#onAction" prefHeight="340.0" prefWidth="260.0" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
