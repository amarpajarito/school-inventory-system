<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="460.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pajarito.inventory.SplashViewController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #000; -fx-background-radius: 10; -fx-padding: 10;">
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/school.png" />
                    </image>
                </ImageView>
                <Label text="SCHOOL INVENTORY SYSTEM" textFill="white" style="-fx-font-size: 18px; -fx-font-family: 'Franklin Gothic Heavy'; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onClicked" prefHeight="32.0" prefWidth="100.0" style="-fx-background-color: #000; -fx-background-radius: 5;" text="Next" textFill="WHITE" />
        </VBox>
    </children>
</AnchorPane>
